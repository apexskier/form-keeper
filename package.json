{
  "dependencies": {
    "rollup": "^4.28.1",
    "typescript": "^5.7.2"
  },
  "scripts": {
    "build": "npm run build:typescript && npm run build:content && npm run build:popup && npm run build:background",
    "build:typescript": "tsc",
    "build:content": "rollup Extension/dst/content.js --file Extension/Resources/content.js --format iife",
